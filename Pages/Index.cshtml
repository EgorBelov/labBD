@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model labBD.Pages.IndexModel
@*@Styles.Render("~/Content/css")*@
<link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
<h2>Список пользователей</h2>
<p><a asp-page="Create" class="s13">Добавить пльзователя</a></p>
<table>
    <tr>
        <th>Имя</th>
        <th>Почта</th>
        <th>Рост</th>
        <th>Вес</th>
        <th>Возраст</th>
        <th>Пол</th>
        <th>Физическая активность</th>
        <th>Действия</th>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Height</td>
            <td>@user.Weight</td>
            <td>@user.Age</td>
            <td>@user.Sex</td>
            <td>@user.PhysicalActivity</td>
            <td>
                <form method="post">
                    <a asp-page="Edit" asp-route-id="@user.Id" class="s11">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id" class="gradient-button">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
