@page 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model labBD.Pages.IndexModel

<h2>Список пользователей</h2>
<p><a  href="/Create">Добавить пользователя</a></p>
<table>
    <tr><th>Название</th><th>Продуктовая группа</th><th>Вид</th><th>Калорийность</th></tr>
    @foreach (var product in Model.Products)
    {
            <tr>
                <td>@product.Name</td>
                <td>@product.ProductGroup</td>
                <td>@product.Type</td>
                <td>@product.CaloricValue</td>
                <td>
                    <form method="post">
                            <a asp-page="Edit" asp-route-id="@product.Id">Изменить</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@product.Id">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        
    }
</table>
