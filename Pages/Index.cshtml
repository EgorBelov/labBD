@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model labBD.Pages.IndexModel
@{
}
<style>
    tr{
        display: flex;
        justify-content: center;
        flex-direction: row;
    }
    th{
        padding: 30px;
        border: solid 5px black
    }
    td{

    }
</style>
<h2>Список пользователей</h2>
<p><a asp-page="Create">Добавить пльзователя</a></p>
<table>
    <tr><th>Имя</th><th>Почта</th><th>Рост</th><th>Вес</th><th>Возраст</th><th>Пол</th><th>Физическая активность</th></tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Height</td>
            <td>@user.Weight</td>
            <td>@user.Age</td>
            <td>@user.Sex</td>
            <td>@user.PhysicalActivity</td>
            <td>
                <form method="post">
                    <a asp-page="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id" style="color: blue">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
