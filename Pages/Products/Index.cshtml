@page 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model labBD.Pages.Products.IndexModel
<link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
<h2>Список продуктов</h2>
<p><a asp-page="Create"class="s13">Добавить продукт</a></p>
<table>
    <tr><th>Название</th><th>Продуктовая группа</th><th>Вид</th><th>Калорийность</th><th>Действия</th></tr>
    @foreach (var product in Model.Products)
    {
            <tr>
                <td class="td1">@product.Name</td>
                <td>@product.ProductGroup</td>
                <td>@product.Type</td>
                <td>@product.CaloricValue</td>
                <td>
                    <form method="post">
                    <a asp-page="Edit" asp-route-id="@product.Id" class="s11">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@product.Id" class="gradient-button">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        
    }
</table>
