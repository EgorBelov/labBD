@page
@model labBD.Pages.FoodIntakes.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Список приемов пищи</h2>
<p><a asp-page="Create">Добавить прием пищи</a></p>
<table>
    <tr style="" ><th>Вид приема пищи</th><th>Блюдо</th><th>Дата приема</th><th>Пользователь</th></tr>
    @foreach (var foodintake in Model.FoodIntakes)
    {
        <tr>
            <td>@foodintake.TypeOfFoodIntake</td>
            <td>@foodintake.Meal?.Name</td>
            <td>@foodintake.Date</td>
            <td>@foodintake.User?.Name</td>
            <td>
                <form method="post">
                    <a asp-page="Edit" asp-route-id="@foodintake.Id">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@foodintake.Id">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
